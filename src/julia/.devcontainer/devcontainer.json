// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/JuliaLang/devcontainer-templates/tree/main/src/julia
{
	"name": "Julia",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		// A Feature to install Julia via juliaup. More info: https://github.com/JuliaLang/devcontainer-features/tree/main/src/julia.
		"ghcr.io/julialang/devcontainer-features/julia:1": {
			"channel": "${templateOption:channel}"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	"customizations": {
		// Additional settings for VS Code.
		"vscode": {
			"extensions": [
				// Note: The Julia extension is no needed here, as the Julia Feature will install it.
				"tamasfe.even-better-toml"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
